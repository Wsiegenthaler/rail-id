{
  "name": "rail-id",
  "version": "0.0.1",
  "description": "A general purpose parser for European rolling stock identification codes",
  "type": "module",
  "main": "dist/rail-id.cjs",
  "module": "dist/rail-id.mjs",
  "browser": "dist/rail-id.umd.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "c8 -r html -r text ava",
    "test-watch": "ava -w",
    "dump-grammars": "npm run dump-grammars-mjs; npm run dump-grammars-ts",
    "dump-grammars-mjs": "npx ts-node src/build/bin/dump-grammar.mjs dump-all src --out-dir data/grammars",
    "dump-grammars-ts": "npx ts-node src/build/bin/dump-grammar dump-all src --out-dir data/grammars",
    "gen-keepers": "node src/build/bin/generate-keepers.mjs data/keeper-data.csv src/defs/keepers.ts",
    "gen-ohm-types": "npm run dump-grammars; npx ohm generateBundles --withTypes --esm data/grammars/**/*.ohm"
  },
  "author": "Weston Siegenthaler",
  "license": "AGPL-3.0",
  "dependencies": {
    "lodash-es": "^4.17.21",
    "ohm-js": "^16.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@ohm-js/cli": "^1.1.0",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.1.0",
    "@types/lodash-es": "^4.17.6",
    "ava": "^5.0.1",
    "c8": "^7.12.0",
    "commander": "^9.4.1",
    "csv": "^6.2.1",
    "prettyjson": "^1.2.5",
    "rollup": "^3.2.3",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-node": "^10.9.1"
  },
  "ava": {
    "files": [
      "test/**/*",
      "!test/util.ts"
    ],
    "extensions": { "ts": "module" },
    "nodeArguments": [ "--loader=ts-node/esm" ],
    "verbose": true
  },
  "files": [
    "dist"
  ]
}
